# AI-IDE Production Environment Variables

# Server Configuration
NODE_ENV=production
PORT=3001
HOST=0.0.0.0

# Frontend Configuration
VITE_API_URL=https://yourdomain.com
VITE_WS_URL=wss://yourdomain.com

# Database Configuration
MONGODB_URI=mongodb://username:password@your-mongodb-host:27017/ai-ide?authSource=admin
MONGODB_TEST_URI=mongodb://username:password@your-mongodb-host:27017/ai-ide-test?authSource=admin

# Redis Configuration
REDIS_URL=redis://username:password@your-redis-host:6379
REDIS_HOST=your-redis-host
REDIS_PORT=6379
REDIS_PASSWORD=your-secure-redis-password

# Authentication & Security
JWT_SECRET=your-super-secure-jwt-secret-256-bits-minimum
JWT_EXPIRES_IN=24h
SESSION_SECRET=your-super-secure-session-secret-256-bits-minimum
BCRYPT_ROUNDS=12

# Google OAuth Configuration (Production)
GOOGLE_CLIENT_ID=your-production-google-oauth-client-id
GOOGLE_CLIENT_SECRET=your-production-google-oauth-client-secret
GOOGLE_REDIRECT_URI=https://yourdomain.com/api/v1/auth/google/callback

# Google Drive API
GOOGLE_DRIVE_API_KEY=your-production-google-drive-api-key

# CORS Configuration
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=50

# Docker Configuration for Code Execution
DOCKER_PYTHON_IMAGE=ai-ide-python:latest
DOCKER_NODE_IMAGE=ai-ide-node:latest
EXECUTION_TIMEOUT=30000
MAX_MEMORY=256
MAX_CPU=0.5

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=/var/log/ai-ide/app.log

# File Upload Configuration
MAX_FILE_SIZE=5242880
UPLOAD_DIR=/var/uploads

# Production Settings
HOT_RELOAD=false
VERBOSE_LOGGING=false
DEBUG_MODE=false

# SSL Configuration
SSL_CERT_PATH=/etc/ssl/certs/ai-ide.crt
SSL_KEY_PATH=/etc/ssl/private/ai-ide.key

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=5