# Backend Environment Configuration

# Server Configuration
PORT=3001
NODE_ENV=development

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/ai-ide
REDIS_URL=redis://localhost:6379

# Google OAuth2 Configuration
GOOGLE_CLIENT_ID=your-google-client-id.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:3001/api/v1/auth/google/callback

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# File Storage Configuration
MAX_FILE_SIZE=50MB
UPLOAD_PATH=/tmp/ai-ide-uploads

# Docker Runner Configuration
DOCKER_RUNNER_PYTHON_IMAGE=ai-ide-python-runner
DOCKER_RUNNER_NODE_IMAGE=ai-ide-node-runner
DOCKER_NETWORK=ai-ide-network

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=logs/ai-ide.log