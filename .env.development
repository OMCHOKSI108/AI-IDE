# AI-IDE Development Environment Variables

# Server Configuration
NODE_ENV=development
PORT=3001
HOST=0.0.0.0

# Frontend Configuration
VITE_API_URL=http://localhost:3001
VITE_WS_URL=ws://localhost:3001

# Database Configuration
MONGODB_URI=mongodb://admin:password123@localhost:27017/ai-ide?authSource=admin
MONGODB_TEST_URI=mongodb://admin:password123@localhost:27017/ai-ide-test?authSource=admin

# Redis Configuration
REDIS_URL=redis://:redis123@localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=redis123

# Authentication & Security
JWT_SECRET=dev-jwt-secret-change-in-production-environment
JWT_EXPIRES_IN=7d
SESSION_SECRET=dev-session-secret-change-in-production
BCRYPT_ROUNDS=10

# Google OAuth Configuration (Development)
GOOGLE_CLIENT_ID=your-google-oauth-client-id
GOOGLE_CLIENT_SECRET=your-google-oauth-client-secret
GOOGLE_REDIRECT_URI=http://localhost:3001/api/v1/auth/google/callback

# Google Drive API
GOOGLE_DRIVE_API_KEY=your-google-drive-api-key

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# Docker Configuration for Code Execution
DOCKER_PYTHON_IMAGE=ai-ide-python:latest
DOCKER_NODE_IMAGE=ai-ide-node:latest
EXECUTION_TIMEOUT=30000
MAX_MEMORY=512
MAX_CPU=1.0

# Logging Configuration
LOG_LEVEL=debug
LOG_FILE=logs/ai-ide.log

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_DIR=uploads

# Development Settings
HOT_RELOAD=true
VERBOSE_LOGGING=true
DEBUG_MODE=true